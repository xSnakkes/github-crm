{
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "pages/*": ["src/pages/*"],
      "widgets/*": ["src/widgets/*"],
      "app/*": ["src/app/*"],
      "features/*": ["src/features/*"],
      "entities/*": ["src/entities/*"],
      "shared/*": ["src/shared/*"]
    },
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "DOM"],
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
